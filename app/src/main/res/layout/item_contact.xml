<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen10">

    <TextView
        android:id="@+id/nameUserTextView"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Name User"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messagePreviewTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Preview Message"
        android:layout_marginTop="@dimen/dimen10"
        app:layout_constraintEnd_toEndOf="@+id/nameUserTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameUserTextView" />

    <ImageView
        android:id="@+id/stateContactImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/messagePreviewTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameUserTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>